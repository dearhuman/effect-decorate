{
  "name": "effect-decorate",
  "displayName": "effect-decorate",
  "description": "Decorates Effect-ts code with ligature-like symbols to improve readability.",
  "version": "0.2.1",
  "publisher": "dearhumandev",
  "engines": {
    "vscode": "^1.105.0"
  },
  "icon": "media/extension_logo.png",
  "categories": [
    "Other",
    "Visualization"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:typescriptreact"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "effect-decorate.openSettings",
        "title": "Effect Decorate: Open Settings"
      }
    ],
    "configuration": {
      "title": "Effect Decorate",
      "type": "object",
      "properties": {
        "effect-decorate.extension.areDecorationsActive": {
          "type": "boolean",
          "description": "Toggles all the decorations on/off",
          "markdownDescription": "Toggles all the decorations on/off",
          "default": true
        },
        "effect-decorate.extension.isYieldDecorationActive": {
          "type": "boolean",
          "description": "Toggles `yield* yieldable` decoration on/off",
          "markdownDescription": "Toggles `yield* yieldable` decoration on/off",
          "default": true
        },
        "effect-decorate.extension.isNamespaceDecorationActive": {
          "type": "boolean",
          "description": "Toggles `Namespace.Namespace` collapsing decoration on/off",
          "markdownDescription": "Toggles `Namespace.Namespace` collapsing decoration on/off",
          "default": true
        },
        "effect-decorate.extension.yieldableColor": {
          "type": "string",
          "enum": [
            "default",
            "none",
            "custom"
          ],
          "enumDescriptions": [
            "Uses the theme's foreground color",
            "Uses the theme's standard color for the token",
            "Uses the color specified in Yieldable Custom Color"
          ],
          "markdownDescription": "Changes the color of `foo` in `yield* foo`",
          "default": "default"
        },
        "effect-decorate.extension.yieldableCustomColor": {
          "type": "string",
          "default": "#FFFFFF",
          "markdownDescription": "Sets the custom color for the yieldable `foo` in `yield* foo`.\nActive only if \"Custom\" is chosen in Yieldable Color.",
          "description": "Sets the custom color for the yieldable `foo` in `yield* foo`.\nActive only if \"Custom\" is chosen in Yieldable Color."
        },
        "effect-decorate.extension.yieldableTextDecoration": {
          "type": "string",
          "markdownDescription": "Changes decorations for the yieldable `foo` in `yield* foo`.",
          "default": "underline",
          "enum": [
            "underline",
            "none"
          ]
        },
        "effect-decorate.extension.isDebugActive": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Activates debugging information in the `effect-decorate` output channel.\nUse it when encountering bugs, include it in the GitHub issue."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "package:vsix": "pnpx @vscode/vsce package --no-dependencies",
    "publish": "pnpx @vscode/vsce publish --no-dependencies -p $VSCE_PAT",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.105.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  },
  "dependencies": {
    "effect": "^3.19.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dearhuman/effect-decorate.git"
  },
  "license": "MIT"
}
