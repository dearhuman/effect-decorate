{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Package extension",
            "type": "shell",
            "command": "pnpm package:vsix && code --install-extension effect-decorate-$(node -p \"require('./package.json').version\").vsix --force",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        }
    ]
}